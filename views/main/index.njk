{% extends "base.njk" %}

{% block content %}
    <h1 class="govuk-heading-xl">{{config.SERVICE_NAME}}</h1>
    <form action="/search" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    {{ govukSelect({
        id: 'location',
        name: 'location',
        classes: 'govuk-!-width-one-third',
        label: {
            text: "Location",
            classes: 'govuk-label--s'
        },
        items: [
            {
            value: "mercury",
            text: "Mercury"
            },
            {
            value: "venus",
            text: "Venus"
            },
            {
            value: "earth",
            text: "Earth"
            },
            {
            value: "mars",
            text: "Mars"
            }
        ]
    }) }}
    {{ govukInput({
        id: 'duck_name',
        name: 'duckName',
        label: {
            text: 'Name',
            classes: 'govuk-label--s'
        },
        attributes: {
            maxLength: 100
        },
            
        classes: 'govuk-!-width-one-third'
    }) }}
    {{ govukCheckboxes({
        name: "duckCategory",
        fieldset: {
            legend: {
            text: "Category of duck",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--s"
            }
        },
        items: [
            {
            value: "astronaut",
            text: "Astronaut duck"
            },
            {
            value: "alien",
            text: "Alien duck"
            },
            {
            value: "rocket",
            text: "Rocket duck"
            },
            {
            value: "human",
            text: "Human duck"
            }
        ]
    }) }}
    {{ govukButton({
        text: 'Search',
        type: "submit",
        classes: "govuk-!-margin-bottom-2",
        id: "searchButton"
    }) }}
    </form>
{% endblock %}
